<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textSize="18sp"
                android:text="@string/huowu_str"/>
            <TextView android:id="@+id/i_hwName_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:singleLine="true"
                android:maxLength="15"
                android:background="@android:drawable/edit_text"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:background="@android:color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textSize="18sp"
                android:text="@string/guigexinghao"/>
            <TextView android:id="@+id/guigexinghao_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:singleLine="true"
                android:maxLength="15"
                android:background="@android:drawable/edit_text"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:background="@android:color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textSize="18sp"
                android:text="@string/danwei_str"/>
            <TextView android:id="@+id/danwei_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:singleLine="true"
                android:maxLength="15"
                android:background="@android:drawable/edit_text"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:background="@android:color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textSize="18sp"
                android:text="@string/shuliang_str"/>
            <TextView android:id="@+id/shuliang_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:singleLine="true"
                android:maxLength="15"
                android:background="@android:drawable/edit_text"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:background="@android:color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textSize="18sp"
                android:text="@string/danjia_str"/>
            <TextView android:id="@+id/danjia_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:singleLine="true"
                android:maxLength="15"
                android:background="@android:drawable/edit_text"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:background="@android:color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textSize="18sp"
                android:text="@string/je_buhanshui_str"/>
            <TextView android:id="@+id/je_buhanshui_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:singleLine="true"
                android:maxLength="15"
                android:background="@android:drawable/edit_text"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:id="@+id/jian_huowu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/jianitem_btn_sel"/>
</LinearLayout>