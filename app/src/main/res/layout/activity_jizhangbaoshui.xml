<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:id="@+id/leiNSRLL"
        android:gravity="center">
        <RadioGroup
            android:id="@+id/rg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:checkedButton="@+id/radioR1">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/radioR1_s"
                android:id="@id/radioR1"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="24dp"
                android:gravity="center"
                android:text="@string/radioR2_s"
                android:id="@+id/radioR2"
                />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="18sp"
            android:text="@string/jichang_zhouqi_s"/>
        <RadioGroup
            android:id="@+id/rg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/radio1"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/radio1"
                android:id="@id/radio1"
                android:layout_marginLeft="16dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/radio2"
                android:id="@+id/radio2"
                android:layout_marginLeft="16dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/radio3"
                android:id="@+id/radio3"
                android:layout_marginLeft="16dp"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@android:color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="18sp"
            android:text="@string/company_name"/>
        <EditText android:id="@+id/cName_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:hint="@string/company_name_hint_input"
            android:singleLine="true"
            android:maxLength="15"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white">
        <TextView android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/area_gongsi"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="16dp"/>
        <View android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Spinner android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:layout_marginTop="1dp">
        <EditText android:id="@+id/book_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="@string/please_phone"
            android:singleLine="true"
            android:drawableLeft="@mipmap/phone_sym_img"
            android:drawablePadding="4dp"
            android:inputType="phone"
            android:maxLength="15"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:layout_marginTop="1dp">
        <EditText android:id="@+id/name_jiazhang"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="@string/please_name"
            android:singleLine="true"
            android:drawableLeft="@mipmap/phone_sym_img"
            android:drawablePadding="4dp"
            android:inputType="textPersonName"
            android:maxLength="15"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:layout_marginTop="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="16dp"
            android:text="@string/heji"
            android:textSize="18sp"/>
        <TextView android:id="@+id/shu_heji"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="4dp"

            android:textSize="18sp"
            android:textColor="@android:color/holo_red_light"/>
        <View android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button android:id="@+id/bookYuQue"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginRight="16dp"
            android:padding="4dp"
            android:text="@string/book_yuque"
            android:background="@drawable/btn_bookyuyue_selector"/>
    </LinearLayout>
</LinearLayout>
