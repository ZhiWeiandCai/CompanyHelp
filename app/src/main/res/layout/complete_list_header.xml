<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:layout_width="match_parent"
        android:layout_height="0.11dp"
        android:background="@color/colorGray2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/new_company"/>
        <EditText
            android:id="@+id/complete_company_name"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:textSize="18sp"
            android:layout_weight="1"
            android:editable="false"
            android:enabled="true"
            android:hint="请选择公司名称"/>
        <Spinner
            android:id="@+id/complete_spinner"
            android:layout_width="22dp"
            android:layout_marginRight="10dp"
            android:layout_height="35dp">

        </Spinner>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@android:color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/company_money"/>
        <EditText
            android:id="@+id/complete_zhuce_money"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="18sp"
            android:phoneNumber="true"
            android:layout_marginRight="20dp"
            android:hint="请输入注册资金(单位万)"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/company_style"/>
        <Spinner
            android:id="@+id/complete_company_leixing"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="18sp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"

        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/company_address"/>
        <EditText
            android:id="@+id/complete_jingying_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:singleLine="true"
            android:layout_marginRight="20dp"
            android:hint="请输入经营地址"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/fanwei"/>
        <EditText
            android:id="@+id/complete_company_fanwei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginRight="20dp"
            android:singleLine="true"
            android:hint="请输入经营范围"/>

    </LinearLayout>

</LinearLayout>