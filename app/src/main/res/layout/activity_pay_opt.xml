<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xht.android.companyhelp.PayOptActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/shangpin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/ddxq"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/ddqe"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/sel_pay_fs"
        android:textSize="18sp"
        android:paddingLeft="4dp"
        android:gravity="left|center_vertical"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:id="@+id/wepay_pay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:drawable/edit_text"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@mipmap/wepaylogo1"
            />
        <View
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/we_xin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/zhifu_dui"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/alipay_pay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:drawable/edit_text"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@mipmap/alipaylogo"
            />
        <View
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/zhi_fu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/zhifu_dui"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
          />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <Button
        android:id="@+id/zhifu_liji"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textSize="18sp"
        android:text="@string/lijizhifu"
        android:background="@drawable/btn_background_circle"/>

</LinearLayout>
