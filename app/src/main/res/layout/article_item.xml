<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView android:id="@+id/artTitle_item"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"/>
    <ImageView android:id="@+id/artPic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <TextView android:id="@+id/smallLeiBieTV"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_below="@id/artTitle_item"
        android:gravity="center"/>
    <TextView android:id="@+id/timeTV"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/smallLeiBieTV"
        android:layout_below="@id/artTitle_item"
        android:gravity="center"/>

</RelativeLayout>
