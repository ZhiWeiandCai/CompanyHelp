<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="账户管理"
            android:textSize="25sp"
            android:gravity="center_horizontal"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/zh_name"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />
        <EditText
            android:id="@+id/ed_new_name"
            android:layout_width="match_parent"
            android:drawableLeft="@mipmap/zhanghu_name"
            android:layout_height="40dp"
            android:hint="请输入新的姓名"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/zh_zhanghu"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />
        <EditText
            android:id="@+id/ed_new_phone"
            android:layout_width="match_parent"
            android:drawableLeft="@mipmap/phone_sym_img"
            android:layout_height="40dp"
            android:hint="请输入新的电话号码"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@android:color/white"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/zh_old_mima"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />
        <EditText
            android:id="@+id/ed_old_mima"
            android:layout_width="match_parent"
            android:drawableLeft="@mipmap/mima"
            android:layout_height="40dp"
            android:hint="请输入原密码(必填)"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@android:color/white"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/zh_mima"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />
        <EditText
            android:id="@+id/ed_new_mima"
            android:drawableLeft="@mipmap/mima"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="请输入新密码"
            />

    </LinearLayout>



    <Button
        android:id="@+id/zh_submit"
        android:layout_width="match_parent"
        android:text="提交修改"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_background_circle"
        android:layout_height="wrap_content" />


</LinearLayout>