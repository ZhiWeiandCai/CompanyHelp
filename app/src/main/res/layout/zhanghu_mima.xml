<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="密码修改"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <EditText
        android:id="@+id/ed_old_mima"
        android:layout_width="match_parent"
        android:drawableLeft="@mipmap/mima"
        android:layout_height="40dp"
        android:hint="请输入原密码(必填)"
        android:password="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:digits="0123456789abcdefghigklmnopqrstuvwxyzQWERTYUIOPASDFGHJKLZXCVBNM"
        />
    <EditText
        android:id="@+id/ed_new_mima"
        android:drawableLeft="@mipmap/mima"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:password="true"
        android:digits="0123456789abcdefghigklmnopqrstuvwxyzQWERTYUIOPASDFGHJKLZXCVBNM"
        android:hint="请输入新密码"
        />
    <Button
        android:id="@+id/zh_submit1"
        android:layout_width="match_parent"
        android:text="提交修改"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_background_circle"
        android:layout_height="wrap_content" />
</LinearLayout>