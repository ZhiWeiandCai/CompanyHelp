<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xht.android.companyhelp.PayOptActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:layout_height="50dp">


            <TextView
                android:id="@+id/shangpin"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                android:text="公司注册"

                android:layout_marginLeft="10dp"
                android:gravity="center"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/shanpin_img"
            android:layout_toLeftOf="@id/shangpin"
            android:src="@mipmap/new_company"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/ddxq"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:background="@android:color/white"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/ddqe"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:background="@android:color/white"
        android:padding="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="4dp"
        android:gravity="left|center_vertical"
        />

    <LinearLayout
        android:id="@+id/wepay_pay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:layout_gravity="center_vertical"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/weixinlogo"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="微信支付"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:id="@+id/view" />

        <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/we_xin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/zhifugou"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:id="@+id/alipay_pay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:layout_gravity="center_vertical"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:background="@mipmap/zhifubaologo"
            android:id="@+id/imageView" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="支  付  宝"
            android:textSize="17sp"
            android:layout_marginLeft="6dp"
            android:gravity="center_vertical"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/zhi_fu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/zhifugou"
            android:visibility="gone"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
          />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <Button
        android:id="@+id/zhifu_liji"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textSize="18sp"
        android:text="@string/lijizhifu"
        android:textColor="#ffffff"
        android:background="@drawable/btn_background_circle"/>

</LinearLayout>
