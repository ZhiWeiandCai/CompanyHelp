<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_marginTop="15dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/item_rg1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/item_biangeng_gudong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="变更股东"/>
        <RadioButton
            android:id="@+id/item_biangeng_guquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="变更股权"/>
    </RadioGroup>

    <RadioGroup
        android:id="@+id/item_rg2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/item_biangeng_zeng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="增"/>
        <RadioButton
            android:id="@+id/item_biangeng_jian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textSize="18sp"
            android:text="减"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:padding="3dp"
            android:text="姓名:"/>
        <EditText
            android:id="@+id/item_biangeng_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入姓名"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/shengfengzhenghao_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:padding="3dp"
            android:layout_marginTop="6dp"
            android:layout_gravity="center_vertical"
            android:text="身份证号:"/>
        <EditText
            android:id="@+id/item_shengfengzhenghao_edit"
            android:layout_toRightOf="@id/shengfengzhenghao_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text|number"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzQWERTYUIOPASDFGHJKLZXCVBNM"
            android:hint="请输入身份证号"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:padding="3dp"
            android:text="身份证地址:"/>
        <EditText
            android:id="@+id/item_biangeng_sfz_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="请输入身份证地址"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:padding="3dp"
            android:text="股权比例:"/>
        <EditText
            android:id="@+id/item_biangeng_guquan_bili"
            android:layout_width="150dp"
            android:phoneNumber="true"
            android:layout_height="wrap_content"
            android:hint="请输入股权比例"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:padding="3dp"
            android:text="%"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <Button
        android:id="@+id/item_imageview_contacts"
        android:layout_width="match_parent"
        android:text="确认保存"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_background_circle"
        android:layout_height="wrap_content" />
</LinearLayout>